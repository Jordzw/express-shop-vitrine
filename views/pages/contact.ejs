<%- include ('../common/header') -%>

    <div class="content_form">

        <div class="contact_form-title">
            Nous contacter
        </div>
        <form action="/contact" class="contact_form" method="post">
            <div class="form-group-input">
                <span>Nom</span>
                <input class="form-field" type="text" name="name" value="" required>
                <span>Prénom</span>
                <input class="form-field" type="text" name="name" value="" required>
            </div>

            <div class="form-group-input">
                <span>Email</span>
                <input class="form-field" type="email" name="email" value="" required>
            </div>
            <div class="form-group-input-left">
                <span>Etes vous une societé ?</span>
                <input type="checkbox" id="check-siret" onclick="checkSiret()" name="check-siret" value="check">
                <label for="check-siret"></label>



                <!-- <input type="checkbox" id="check-siret" onclick="checkSiret()" name="check-siret"> -->
            </div>
            <div class="form-group-input hidden" id="siret-input">
                <span>Numéro de Siret</span>
                <input class="form-field" type="number" name="siret" id="siret-req" value="">
            </div>
            <div class="form-group-input">
                <span>Votre demande</span>
                <textarea class="form-field" name="demande" value="Écrivez votre demande..." required></textarea>
            </div>
            <input type="submit" class="form-field2 send_contact" name="sendMail" value="Envoyer">

        </form>

    </div>




